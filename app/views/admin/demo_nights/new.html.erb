<%= form_for @demo_night, url: admin_demo_nights_path do |f| %>
<div class="input-field col s12">
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, class:"validate" %>
</div>
<div class="input-field col s12">
  <%= f.submit "Create Demo Night!", class: "waves-effect waves-light btn light-blue darken-1" %>
</div>
<% end %>
